@model Team14_Final_Project.Models.RegisterViewModel
@using Team14_Final_Project.Models
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    @*TODO: Add code for additional fields required for login*@
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.student.EID, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.student.EID, new { @class = "form-control" })
        </div>
    </div>

    @*<div class="form-group">
        @Html.LabelFor(m => m.student.Major, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m => m.student.Major, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.student.Major)
        </div>
    </div>*@
    
    <div class="form-group">
        <label class="control-label col-md-2">Committee</label>
        <div class="col-md-10">
            @Html.DropDownList("MajorID", (SelectList)ViewBag.AllMajors, new { @class = "form-control" })
        </div>
    </div>    
    
    <div class="form-group">
        @Html.LabelFor(m => m.student.GradSemester, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m => m.student.GradSemester, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.student.GradSemester)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.student.GradYear, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.student.GradYear, Enumerable.Range(2016, 11).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.student.StudentPosition, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m => m.student.StudentPosition, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.student.StudentPosition)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.student.GPA, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.student.GPA, new { @class = "form-control" })
        </div>
    </div>
  
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}


